<% provide :title, t(".edit_title") %>
<h1><%= t ".edit_order" %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @order_detail do |f| %>

      <%= f.label :unit_quantity %>
      <%= f.number_field :unit_quantity, class: "form-control", min: 1 %>

      <%= f.hidden_field :product_id, product_id: @order_detail[:product_id] %>

      <%= f.submit t(".edit_button"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
