<li id="product-<%= product.id %>" class="td-prod-li col-md-5">
  <div class="image-show">
    <%= link_to default_image(product), product %>
    <%= form_for @order_detail, remote:true do |f| %>
      <div class="input-group-btn">
        <div class="input-group">
          <%= f.number_field :quantity, value: 1, class: "form-control", min: 1 %>
        </div>
        <%= f.hidden_field :product_id, value: product.id %>
        <%= f.submit t("order.button"), class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
  <span class="name"><%= t "product.name" %><%= product.name %></span><br>
  <div class="line"></div>
  <span class="description"><%= t "product.description" %><%= product.description %></span><br>
  <span class="price"><%= t "product.price" %><%= product.price %></span><br>
  <span class="rate">
    <%=  %><%= product.ratings.average :vote %>
  </span><br>
  <%= form_for @order_detail do |f| %>
  <% end %>
</li>
