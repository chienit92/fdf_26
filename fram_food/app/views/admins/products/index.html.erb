<% provide :title, t(".product") %>

<%= link_to t(".new"), new_admins_product_path, class: "btn btn-primary",
  data: {toggle: "modal", target: "#new"}, remote: true %>
<%= render "form" %>

<br></br>

<h2><%= t "product" %></h2>

<div class="container">
  <div class="card">
    <div class="col-lg-9">
      <% @supports.products.each do |product| %>
        <div class="col-md-3">
          <%= default_image product %>
          <h5><%= link_to product.name, admins_product_path(product) %></h5>
          <%= product.price %>
        </div>
      <% end %>
    </div>
  </div>
</div>
